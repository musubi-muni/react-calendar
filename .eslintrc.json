{
  "extends": [
    "eslint:recommended",
    "plugin:prettier/recommended"
  ],
  "parser": "babel-eslint",
  "parserOptions": {
    "ecmaVersion": 6,
    "sourceType": "module",
    "ecmaFeatures": {
      "jsx": true,
      "modules": true,
      "experimentalObjectRestSpread": true
    }
  },
  "plugins": ["react"],
  "env": {
    "serviceworker": true,
    "node": true,
    "browser": true,
    "es6": true
  },
  "globals": {
    "window": true
  },
  "rules": {
    "prettier/prettier": [
      "error",
      {
        "singleQuote": true,
        "trailingComma": "none",
        "bracketSpacing": true,
        "jsxBracketSameLine": false
      }
    ],
    "react/jsx-uses-vars": 1,
    "react/display-name": 0,
    "array-bracket-spacing": 1,
    "arrow-spacing": 1,
    "camelcase": 1,
    "comma-spacing": 1,
    "no-cond-assign": 2,
    "no-console": 0,
    "no-debugger": 0,
    "no-dupe-keys": 2,
    "no-duplicate-imports": 1,
    "no-duplicate-case": 2,
    "no-empty": 2,
    "no-undef": 0,
    "no-unexpected-multiline": "warn",
    "no-unused-vars": 0,
    "no-var": 1,
    "prefer-await-to-then": 0
  },
  "settings": {
    "react": {
      "pragma": "React"
    }
  }
}
